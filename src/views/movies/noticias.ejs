<!--HEAD-->
<%- include(".././partials/headNoticias") %>

    <body class="bg1">
        <!--HEADER-->
        <%- include(".././partials/header") %>

            <main>
                <!--EJS-->
                <h1 class="titulo4">Noticias</h1>

                <div class="row row-cols-1 row-cols-md-3">
                    <% for (let i=0; i < noticias.length; i++) { %>
                        <div class="col mb-4">
                            <div class="card-body">
                                <div class="peliculas-container">
                                    <div class="pelicula">
                                        <a href="./noticias/detalle/<%=noticias[i].id%>">
                                            <img class="imagen" src="<%= noticias[i].imagen1 %>"
                                                alt="<%= noticias[i].nombre %>" width="470px">
                                        </a>
                                        <div class="textoPeliculas">
                                            <a href="./noticias/detalle/<%=noticias[i].id%>" class="textoenlasimagenes">
                                              <%= noticias[i].titulo %>
                                            </a>
                                          </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>
                </div>
            </main>

            <!-- FOOTER -->
            <%- include(".././partials/footer.ejs") %>
    </body>

    </html>